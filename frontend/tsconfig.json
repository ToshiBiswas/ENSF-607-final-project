{
  "compilerOptions": {
    /* === Basic Settings === */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* === React / JSX === */
    "jsx": "react-jsx",                  // Enables new JSX transform (no need to import React)
    "esModuleInterop": true,             // Allows default imports from CommonJS modules
    "allowSyntheticDefaultImports": true, // Fixes "no default export" error
    "forceConsistentCasingInFileNames": true,

    /* === Type Checking === */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* === Paths (optional, for clean imports) === */
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
